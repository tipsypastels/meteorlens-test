<% header_mode! :none %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= ticker_type "you're here", "welcome", "now the party", "can finally start", "meteor lens", class: 'site-logo' %>

  <div class="field">
    <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "What are you known as" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Super secret passcode" %>
  </div>

    <div class="field">
    </div>

  <div class="actions flex v-center">
    <% if devise_mapping.rememberable? -%>
      <div class="grows">
        <div class="checkbox-container">
          <%= f.check_box :remember_me %>
          <label for="user_remember_me"></label>
        </div>

        <%= f.label :remember_me, 'Remember?' %>
      </div>
    <% end -%>

    <div class="submit">
      <%= f.submit "Login" %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
